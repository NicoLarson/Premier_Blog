<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8">
	<title>
		{% block title %}NYBlog!
		{% endblock %}
	</title>
	<link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
	<link rel="stylesheet" href="/css/style.css">
	<script src="https://bootswatch.com/_vendor/jquery/dist/jquery.min.js"></script>
	<script src="https://bootswatch.com/_vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

	{# Run `composer require symfony/webpack-encore-bundle`
	and uncomment the following Encore helpers to start using Symfony UX #}
	{% block stylesheets %}
	{#{{ encore_entry_link_tags('app') }}#}
	{% endblock %}

	{% block javascripts %}
	{#{{ encore_entry_script_tags('app') }}#}
	{% endblock %}
</head>

<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container-fluid">
				<a class="navbar-brand" href="/home"> <img src="./asset/img/logo_bw.jpg" alt="logo">NYBlog</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03"
					aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarColor03">
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a class="nav-link" href="/home">Home
								<span class="sr-only">(current)</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/signin">S'enrengister</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/login">Connection</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/create-article">Écrire un article</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/showArticles">Tous les articles</a>
						</li>
					</ul>

				</div>
		</nav>
	</header>
	<main>
		<div class="container">
			{% for label, messages in app.flashes %}
			{% for message in messages %}
			<div class="alert alert-{{ label }}" role="alert">
				{{ message }}
			</div>
			{% endfor %}
			{% endfor %}

			{% block body %}{% endblock %}
		</div>
	</main>
	    <footer>
        <section>
            <h3>Plan du site</h3>
            <ul>
                <li>
                    <a href="/home">Home</a>
                </li>
                <li>
                    <a href="/signin">S'enrengister</a>
                </li>
                <li>
                    <a href="/login">Connection</a>
                </li>
                <li>
                    <a href="/createArticle">Écrire un article</a>
                </li>
                <li>
                    <a href="/showArticles">Tous les articles</a>
                </li>
                <li> <a href="/administration">Page administration</a>
                </li>
            </ul>
        </section>
        <p>&copy; Copyright Nicolas Yang - 2021</p>
    </footer>
</body>

</html>
