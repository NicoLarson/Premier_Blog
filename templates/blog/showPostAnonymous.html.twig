{% extends 'blog/showPost.html.twig' %}

{% block formBlock %}

	{{ form_start(form) }}

	<fieldset>
		<legend>Commenter</legend>

		{{ form_row(form.email, {
         'label': 'Email',
         'attr': {
           'placeholder':'Email'
    }
    }) }}

		{{ form_row(form.username, {
        'label': 'Nom',
        'attr': {
          'placeholder':'Nom'
    }}) }}

		{{ form_row(form.content, {
        'label': 'Commentaire',
        'attr':{
          'placeholder':'Commentaire'
    }}) }}

		<button class="btn btn-primary" type="submit">
			Commenter
		</button>
	</fieldset>
	{{ form_end(form) }}

{% endblock %}
